{
	"manifest_version": 2,

	"name": "Linkslap [Beta]",
	"description": "Get your link slapped",
	"version": "0.2.704",

	"browser_action": {
		"default_icon": {
			"19": "img/icon-19.png",
			"38": "img/icon-38.png"
		},
		"default_popup": "popup.html"
	},
	"icons" : {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png",
		"128": "img/icon-128.png"
	},
	"background" : {
		"page" : "background.html"
	},
	"content_scripts": [
		{
		  "matches": ["http://localhost:37459/*", "http://linkslap.me/*", "http://linkslap2.azurewebsites.net/*" ],
		  "js": ["/js/vendor/jquery-2.1.1.min.js","/js/site-integration.js"],
		  "run_at" : "document_start"
		}
	],
	"permissions": [
		"http://*/*",
		"https://*/*",
		"tabs",
		"storage",
		"idle",
		"notifications"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
